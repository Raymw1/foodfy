<div class="input-group">
  <h4>Email</h4>
  <input type="email" name="email" id="email" value="{{ data.email }}" onblur="Validate.apply(this, 'isEmail')" placeholder="Digite o seu email">
</div>
<div class="input-group">
  <h4>Senha</h4>
  <input type="password" name="password" id="password" placeholder="Digite sua nova senha">
</div>
<div class="input-group">
  <h4>Confirme sua senha</h4>
  <input type="password" name="passwordRepeat" id="passwordRepeat" placeholder="Confirme sua nova senha">
</div>
<input type="hidden" name="token" value="{{ token }}">